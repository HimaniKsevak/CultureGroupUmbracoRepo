@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Routing
@using Umbraco.Extensions

@inject IPublishedValueFallback PublishedValueFallback
@inject IPublishedUrlProvider PublishedUrlProvider

@{
    var FooterLogo = Model.Root()?.Value<IPublishedContent>("footerLogo")?.Url() ?? "";
    var SocialLinks = Model.Value<IEnumerable<BlockListItem>>("socialMediaIconList", fallback: Fallback.ToAncestors);
    var ContactusLinks = Model.Root()?.Value<IEnumerable<Link>>("contactUsLink");
    var selection = Model.Root().Children.Where(x => x.IsVisible(PublishedValueFallback)).ToArray();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>

    <!-- Bootstrap CSS (Add the appropriate link to your Bootstrap CSS file) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>
<body>

<div class="container-fluid mt-5 pt-5 pb-5 bg-dark text-white">
    <div class="row">
        <div class="col-lg-1 col-12">
            <a class="navbar-brand" href="/">
                @if (FooterLogo != null)
                {
                    <img src="@FooterLogo" title="logo" alt="logo" class="img-fluid" style="width: 48px; height: 48px;" />
                }
            </a>
        </div>
        <div class="col-lg-4 col-12">
            <h2>Heading</h2>
            <p>Events is a leading corporate event management company operating in India</p>
            <div class="social-media">
                @if (SocialLinks != null)
                {
                    foreach (var SocialLink in SocialLinks)
                    {
                        var content = SocialLink.Content;
                        var Target = content.Value<string>("Target");
                        var Image = content.Value<IPublishedContent>("image");
                        var ToolTip = content.Value<string>("tooltipText");
                        var socialMediaURL = content.Value<string>("socialMediaURL");

                        <a href="@socialMediaURL" title="@ToolTip" target="@Target" class="text-white">
                            <img src="@Image.Url()" class="social-media-icon img-fluid" width="40" height="40" />
                        </a>
                    }
                }
            </div>
        </div>
        <div class="col-lg-3 col-12">
            <h4>Company</h4>
            @if (selection?.Length > 0)
            {
                <ul class="list-unstyled">
                    @foreach (var item in selection)
                    {
                        <li class="@(item.IsAncestorOrSelf(Model) ? "current" : null)">
                            <a href="@item.Url(PublishedUrlProvider)" class="text-white">@item.Name</a>
                        </li>
                    }
                </ul>
            }
        </div>
        <div class="col-lg-4 col-12">
            <h4>Location</h4>
            <p>@Model.Value("location")</p>
            <p class="contact-info">
                @if (ContactusLinks != null)
                {
                    foreach (var link in ContactusLinks)
                    {
                        var phoneClass = link.Name.ToLower() == "email" ? "fas fa-envelope" : "fas fa-phone";
                        <a href="@link.Url" class="text-white d-flex align-items-center">
                            <i class="@phoneClass me-2"></i>@link.Name
                        </a>
                    }
                }
            </p>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col">
            <p class="small">&copy; 2024 Events Management Company. All Rights Reserved.</p>
        </div>
    </div>
</div>
<!-- Bootstrap JS (Add the appropriate link to your Bootstrap JS file) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.min.js"></script>
</body>
</html>