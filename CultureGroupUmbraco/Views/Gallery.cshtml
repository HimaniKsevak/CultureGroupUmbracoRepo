@using Umbraco.Cms.Core.Models.Blocks;
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Gallery>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    Layout = "Master.cshtml";
    var eventList = Model.Value<IEnumerable<BlockListItem>>("eventList");
}

<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

<div class="container" style="margin-top:65px">
    <h1>My Gallery</h1>
    @if (eventList != null && eventList.Any())
    {
        foreach (var item in eventList)
        {
            var content = item.Content;
            var Title = content.Value<string>("eventTitle");
            var Message = content.Value<string>("eventMessage");
            var Date = content.Value<DateTime>("eventDate");
            var Media = content.Value<IEnumerable<IPublishedContent>>("media");

            <div class="row">
                <div class="col-md-12">
                    <h3>@Title</h3>
                    <h4>@Message</h4>
                    <p>@Date</p>
                </div>

                <div class="col-md-12 d-flex justify-content-center">
                    <div class="swiper-container text-center h-auto w-25">
                        <div class="swiper-wrapper">
                            @foreach (var mediaItem in Media)
                            {
                                <div class="swiper-slide ">
                                    <div class="media-container">
                                        @if (mediaItem.ContentType.Alias == "Image")
                                        {
                                            <img src="@mediaItem.Url()" alt="Image" class="img-fluid" />
                                        }
                                        else
                                        {
                                            <video controls class="img-fluid">
                                                <source src="@mediaItem.Url()" type="video/mp4">
                                                Your browser does not support the video tag.
                                            </video>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- Add Pagination -->
                        <div class="swiper-pagination"></div>
                        <!-- Navigation buttons -->
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>No events found.</p>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        // Initialize Swiper
        var swiper = new Swiper('.swiper-container', {
            loop: true,
            autoplay: false,
            effect: "coverflow",
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev'
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true
            },
            slidesPerView: 1,
            spaceBetween: 0
        });

        $('.swiper-slide').on('click', function () {
            var src = $(this).find('img, video').attr('src');
            var type = $(this).find('img, video').prop('tagName').toLowerCase();

            $('#myModal').modal('show');
        
            var mediaContent = type === 'img' ? '<div><img src="' + src + '" class="img-fluid" alt="Enlarged Image"/>' : '<video controls class="img-fluid"><source src="' + src + '" type="video/mp4"></video></div>';
            var downloadButton = '<div><a href="' + src + '" download class="btn btn-lg"><i class="fas fa-download"></i></a></div>';
            
            $('#modalContent').html(mediaContent + '<br>' + downloadButton);
        });
    });
    
</script>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body d-flex justify-content-center" id="modalContent">
            </div>
        </div>
    </div>
</div>